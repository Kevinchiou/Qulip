<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
 >
<!--  android:background="#FFFFFF"
  android:descendantFocusability="blocksDescendants" -->
    
	<ImageView
		android:id="@+id/List_ImageView_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="2dp"
        android:contentDescription="TODO"
      	android:focusable="false"
    />
   	
   	<LinearLayout
   	    android:id="@+id/linearLayoutlist"
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_marginLeft="15dp"
   	    android:layout_toRightOf="@id/List_ImageView_icon"
   	    android:gravity="center_vertical"
   	    android:orientation="vertical" >

	<TextView android:textStyle="bold" android:textSize="18sp"
		android:id="@+id/List_TextView_title" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:textColor="#0000FF"
  	/>

	<TextView
	    android:id="@+id/List_TextView_desc"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textColor="#000000" />

  	<RelativeLayout android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/layoutlist20" android:layout_width="fill_parent"
  		> 
		<TextView android:textStyle="bold"
			android:id="@+id/List_TextView_date" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:textColor="#FF0000"
			android:layout_alignParentLeft="true"
	  	/>
	  	<Button android:text="@string/save" 
	  		android:layout_width="wrap_content" 
	  		android:id="@+id/List_Button_save" 
	  		android:layout_height="wrap_content" 
	  		android:layout_alignParentRight="true"
	  		android:focusable="false"
	  		android:textColor="#999900"
	  	/>
  	</RelativeLayout>
  	</LinearLayout>
</RelativeLayout>
