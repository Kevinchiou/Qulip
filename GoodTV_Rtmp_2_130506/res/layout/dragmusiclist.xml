<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/List_TextView_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#0000FF"
        android:textSize="18sp"    
        android:textStyle="bold" />

    <TextView
        android:id="@+id/List_TextView_desc"
        android:layout_below="@+id/List_TextView_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="125dp"
        android:textColor="#000000" />

    <RelativeLayout
        android:id="@+id/layoutlist20"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView android:id="@+id/List_drag_item_image"
            android:src="@drawable/drag_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/drag_item_normal_height"/>        
        
        <Button
            android:id="@+id/List_Button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"            
            android:layout_toLeftOf="@+id/List_drag_item_image"
            android:focusable="false"
            android:text="@string/savemusic"
            android:textColor="#999900" />
        

    </RelativeLayout>

</RelativeLayout>